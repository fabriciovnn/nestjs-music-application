generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  ADMIN
  USER
}

model User {
  id Int @id @default(autoincrement())
  name String
  email String @unique
  password String
  role Role
  playlists Playlist[]
}

model Playlist {
  id Int @id @default(autoincrement())
  name String
  genre String
  musics String[]
  user User @relation(fields: [user_id], references: [id])
  user_id Int
}